<Page
    x:Class="HoloSuite.source.features.Keycodes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HoloSuite.source.features"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <TextBlock x:Name="StartMessage" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{ThemeResource SubheaderTextBlockStyle}" FontWeight="SemiBold">
            Press a key...
        </TextBlock>

        <StackPanel Orientation="Vertical" x:Name="Content" Spacing="10">
            <StackPanel Spacing="10" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Grid CornerRadius="8" Padding="22" Width="334" Height="172" BorderThickness="1"
                      Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock FontWeight="SemiBold" FontSize="12" TextAlignment="Center">Keycode</TextBlock>
                        <TextBlock FontWeight="Bold" FontSize="41" x:Name="Keycode">40</TextBlock>
                    </StackPanel>
                </Grid>

                <Grid CornerRadius="8" Padding="22" Width="334" Height="172" BorderThickness="1"
                      Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock FontWeight="SemiBold" FontSize="12" TextAlignment="Center">Key</TextBlock>
                        <TextBlock FontWeight="Bold" FontSize="41" x:Name="Key">�</TextBlock>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <StackPanel Spacing="10" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Grid CornerRadius="8" Padding="22" Width="219" Height="172" BorderThickness="1"
                      Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock FontWeight="SemiBold" FontSize="12" TextAlignment="Center">IsCTRL</TextBlock>
                        <TextBlock FontWeight="Bold" FontSize="41" x:Name="IsCTRL">No</TextBlock>
                    </StackPanel>
                </Grid>

                <Grid CornerRadius="8" Padding="22" Width="219" Height="172" BorderThickness="1"
                      Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock FontWeight="SemiBold" FontSize="12" TextAlignment="Center">IsWindows</TextBlock>
                        <TextBlock FontWeight="Bold" FontSize="41" x:Name="IsWindows">No</TextBlock>
                    </StackPanel>
                </Grid>

                <Grid CornerRadius="8" Padding="22" Width="219" Height="172" BorderThickness="1"
                      Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock FontWeight="SemiBold" FontSize="12" TextAlignment="Center">IsShift</TextBlock>
                        <TextBlock FontWeight="Bold" FontSize="41" x:Name="IsShift">No</TextBlock>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
