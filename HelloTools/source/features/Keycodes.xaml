<Page
    x:Class="HoloSuite.source.features.Keycodes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HoloSuite.source.features"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <TextBlock x:Name="StartMessage" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{ThemeResource SubheaderTextBlockStyle}" FontWeight="SemiBold">
            Press a key...
        </TextBlock>

        <StackPanel Spacing="10" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" x:Name="Content" Visibility="Collapsed">
            <Grid CornerRadius="8" Padding="22" Width="334" Height="172" BorderThickness="1"
              Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock FontWeight="SemiBold" FontSize="12">Keycode</TextBlock>
                    <TextBlock FontWeight="Bold" FontSize="41" x:Name="Keycode">40</TextBlock>
                </StackPanel>
            </Grid>

            <Grid CornerRadius="8" Padding="22" Width="334" Height="172" BorderThickness="1"
              Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock FontWeight="SemiBold" FontSize="12" HorizontalAlignment="Center">Key</TextBlock>
                    <TextBlock FontWeight="Bold" FontSize="41" x:Name="Key">C</TextBlock>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
